@model JJsites.ViewModels.Reports.BudgetSourceReportDetailsViewModel
@{
    var amountSpecificationUnit = Model.AmountSpecificationUnit;
}
@if (Model.BudgetSourceReport?.BudgetSourceReportCategories != null)
{
    foreach (var category in Model.BudgetSourceReport.BudgetSourceReportCategories)
    {
        foreach (var reportItem in category.ReportItems)
        {
            <tr>
                <td>@reportItem.Id</td>
                @if (reportItem.BeginningBudgetTargetId > 0)
                {
                    <td></td>
                }
                else
                {
                    <td>@Html.Raw(reportItem.FunctionSubject?.CustomedNumberAndNameWithHtmlSpaces)</td>
                }
                <td style="text-align: right">@((reportItem.TotalAmount/amountSpecificationUnit).ToString("N"))</td>
                <td>@(reportItem.Summary)</td>
                <td style="text-align: right">@(reportItem.OnPosted)</td>
            </tr>
        }
        <tr>
            <td></td>
            <td>@(category.MoneyNature.Name + "小计：")</td>
            <td style="text-align: right">@((category.SubtotalAmount / amountSpecificationUnit).ToString("N"))</td>
            <td></td>
            <td></td>
        </tr>
    }
    <tr>
        <td></td>
        <td>合计：</td>
        <td style="text-align: right">@((Model.BudgetSourceReport.TotalAmount / amountSpecificationUnit).ToString("N"))</td>
        <td></td>
        <td></td>
    </tr>
}